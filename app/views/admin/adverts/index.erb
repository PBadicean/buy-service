<h1>Listing Adverts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @adverts.each do |advert| %>
      <tr>
        <td><%= advert.article %></td>
        <td><%= advert.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

